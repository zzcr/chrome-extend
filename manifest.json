{
  "manifest_version": 3,
  "name": "OpenTiny NEXT",
  "version": "1.0.0",
  "description": "OpenTiny NEXT 智能助手",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "OpenTiny NEXT 智能助手"
  },
  "options_ui": {
    "page": "./src/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/main.js"]
    }
  ],
  "background": {
    "service_worker": "src/service_worker.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "downloads",
    "userScripts",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["src/vendor/next-sdk.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
